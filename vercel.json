{
  "version": 2,
  "builds": [
    { "src": "*.html", "use": "@vercel/static" },
    { "src": "main.py", "use": "@vercel/python" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "main.py" },
    { "src": "/health", "dest": "main.py" },
    { "src": "/templates", "dest": "main.py" },
    { "src": "/upload", "dest": "main.py" },
    { "src": "/download", "dest": "main.py" },
    { "src": "/process_excel_style", "dest": "main.py" },
    { "src": "/print_letters", "dest": "main.py" },
    { "src": "/(.*)", "dest": "/$1" }
  ]
} 